{
    "tags"      : {
        "allowUnknownTags" : true
    },
    "plugins"   : ["plugins/markdown"],
    "markdown"  : {
        "parser"   : "gfm",
        "hardwrap" : true
    },
    "opts": {
        "template": "./assets/",
        "encoding": "utf8",
        "destination": "./build/",
        "recurse": true,
        "lenient": true
    },
    "templates" : {
        "cleverLinks"     : true,
        "monospaceLinks"  : false,
        "default"         : {
            "outputSourceFiles" : true
        },
        "systemName"      : "Greppy",
        "footer"          : "Greppy is what you make it.",
        "copyright"       : "Greppy Copyright Â© 2013 The contributors to the Greppy project.",
        "navType"         : "vertical",
        "theme"           : "bootstrap",
        "linenums"        : false,
        "collapseSymbols" : true,
        "inverseNav"      : false
    }
}
